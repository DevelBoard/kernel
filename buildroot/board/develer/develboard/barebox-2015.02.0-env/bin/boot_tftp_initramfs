#!/bin/sh

. /env/config

tftp $kernelimage
tftp $oftreeimage
tftp $initrdimage

global linux.bootargs.base="$bootargs"
global linux.bootargs.initramfs="root=/dev/ram0 rdinit=/init"
global linux.bootargs.mtparts="mtdparts=${mtdparts}${nand_device}:${nand_parts}"

bootm -o $oftreeimage -r $initrdimage $kernelimage
