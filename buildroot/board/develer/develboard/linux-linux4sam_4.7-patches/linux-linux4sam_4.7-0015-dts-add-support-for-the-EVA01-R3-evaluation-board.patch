+#include "at91-sama5d4_develboard.dts"
+
+/ {
+	model = "Atmel SAMA5D4 DevelBoard EVA01 R3";
+	compatible = "atmel,sama5d4-develboard-eva01-r3", "atmel,sama5d4-develboard-eva01", "atmel,sama5d4-develboard", "atmel,sama5d4", "atmel,sama5";
+
+	ahb {
+		apb {
+			mmc0: mmc@f8000000 {
+				pinctrl-names = "default";
+				pinctrl-0 = <&pinctrl_mmc0_clk_cmd_dat &pinctrl_wlan_irq>;
+				status = "okay";
+
+				non-removable;
+				cap-power-off-card;
+				keep-power-in-suspend;
+
+				slot@1 {
+					compatible = "ti,wilink8";
+					reg = <1>;
+					bus-width = <4>;
+					interrupt-parent = <&pioE>;
+					interrupts = <8 IRQ_TYPE_EDGE_RISING>;
+					wlan-pwr-gpio = <&pioE 5 GPIO_ACTIVE_HIGH>;
+					wlan-en-gpio = <&pioD 26 GPIO_ACTIVE_HIGH>;
+					status = "okay";
+				};
+			};
+
+			/* WL18xx Bluetooth UART */
+			usart1: serial@f8030000 {
+				status = "okay";
+			};
+
+			pinctrl@fc06a000 {
+				wifi {
+					pinctrl_wlan_irq: wlan_irq {
+						atmel,pins = <
+							AT91_PIOE 8 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_DOWN  /* WLAN_IRQ */
+						>;
+					};
+				};
+			};
+		};
+	};
+};
