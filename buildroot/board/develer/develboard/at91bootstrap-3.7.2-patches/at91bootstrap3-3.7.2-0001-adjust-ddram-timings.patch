 				| AT91C_DDRC2_DECOD_INTERLEAVED
 				| AT91C_DDRC2_UNAL_SUPPORTED);
 
@@ -165,7 +165,7 @@ static void ddramc_reg_config(struct ddramc_register *ddramc_config)
 	ddramc_config->t0pr = (AT91C_DDRC2_TRAS_(8)
